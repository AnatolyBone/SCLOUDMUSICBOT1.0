<% // views/expiring-users.ejs %>

<%
// Хелпер: формат тарифа
function tariffLabel(limit) {
  if (limit >= 1000) return 'Unlimited';
  if (limit === 100) return 'Pro';
  if (limit === 30) return 'Plus';
  return 'Free';
}

// Хелпер: безопасно форматируем дату из БД
function formatDate(s) {
  if (!s) return '—';
  try {
    const d = new Date(s);
    if (isNaN(d.getTime())) return '—';
    return d.toLocaleDateString('ru-RU', { day: '2-digit', month: '2-digit', year: 'numeric' });
  } catch (e) {
    return '—';
  }
}
%>

<%- contentFor('styles') %>
<style>
  .table th {
    font-weight: 500;
  }
</style>

<%- contentFor('body') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">⏳ Истекающие подписки</h1>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0 align-middle">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>Пользователь</th>
            <th>Тариф</th>
            <th>Истекает</th>
            <th>Действия</th>
          </tr>
        </thead>
        <tbody>
          <% if (typeof users !== 'undefined' && users.length > 0) { %>
            <% users.forEach(u => { %>
              <tr>
                <td><a href="/user/<%= u.id %>"><%= u.id %></a></td>
                <td>
                    <div><%= u.first_name || 'Без имени' %></div>
                    <div class="text-muted small"><%= u.username ? '@'+u.username : '' %></div>
                </td>
                <td>
                  <span class="badge bg-warning text-dark"><%= tariffLabel(u.premium_limit) %></span>
                </td>
                <td><%= formatDate(u.premium_until) %></td>
                <td>
                  <a href="/user/<%= u.id %>" class="btn btn-sm btn-outline-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill me-1" viewBox="0 0 16 16"><path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0"/><path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7"/></svg>
                    Профиль
                  </a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5" class="text-center text-muted py-5">
                <p class="h5">Нет пользователей с истекающей подпиской</p>
                <p class="mb-0">Все подписки в порядке.</p>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

