<%
function formatDate(s) {
  if (!s) return '—';
  try {
    const d = new Date(s);
    if (isNaN(d.getTime())) return '—';
    return d.toLocaleString('ru-RU', {
      year: 'numeric', month: 'numeric', day: 'numeric',
      hour: '2-digit', minute: '2-digit'
    });
  } catch (e) {
    return '—';
  }
}
%>

<%- contentFor('styles') %>
<style>
  .table-responsive .table {
    min-width: 600px;
  }
</style>

<%- contentFor('body') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Профиль: <%= userProfile.first_name || userProfile.username || userProfile.id %></h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <a href="/users" class="btn btn-sm btn-outline-secondary">
      <i class="bi bi-arrow-left"></i> Назад к списку
    </a>
  </div>
</div>

<div class="row g-4">
  <!-- Левая колонка с информацией и управлением -->
  <div class="col-lg-5">
    <div class="card shadow-sm mb-4">
      <div class="card-header">Информация о пользователе</div>
      <div class="card-body">
        <dl class="row mb-0">
          <dt class="col-sm-5">ID</dt><dd class="col-sm-7"><%= userProfile.id %></dd>
          <dt class="col-sm-5">Имя</dt><dd class="col-sm-7"><%= userProfile.first_name || '-' %></dd>
          <dt class="col-sm-5">Username</dt><dd class="col-sm-7"><%= userProfile.username ? '@'+userProfile.username : '-' %></dd>
          <dt class="col-sm-5">Статус</dt>
          <dd class="col-sm-7">
            <% if (userProfile.active) { %><span class="badge bg-success">Активен</span><% } else { %><span class="badge bg-danger">Заблокирован</span><% } %>
          </dd>

          <!-- ======================= НОВЫЙ БЛОК: ИНФО О РЕФЕРАЛЕ ======================= -->
<dt class="col-sm-5">Источник</dt>
<dd class="col-sm-7">
  <% if (referrer) { %>
    Приглашен <a href="/user/<%= referrer.id %>"><%= referrer.first_name || referrer.username || referrer.id %></a>
  <% } else { %>
    Пришел сам
  <% } %>
</dd>
<!-- ============================================================================== -->

          <dt class="col-sm-5">Лимит/день</dt><dd class="col-sm-7"><%= userProfile.premium_limit %></dd>
          <dt class="col-sm-5">Подписка до</dt><dd class="col-sm-7"><%= formatDate(userProfile.premium_until) %></dd>
          <dt class="col-sm-5">Последняя активность</dt><dd class="col-sm-7"><%= formatDate(userProfile.last_active) %></dd>
          <dt class="col-sm-5">Скачано всего</dt><dd class="col-sm-7"><%= userProfile.total_downloads || 0 %></dd>
        </dl>
      </div>
    </div>
    <div class="card shadow-sm mb-4">
        <div class="card-header">Смена тарифа</div>
        <div class="card-body">
            <form class="d-flex gap-2" method="post" action="/set-tariff">
              <input type="hidden" name="userId" value="<%= userProfile.id %>">
              <select name="limit" class="form-select form-select-sm">
                <option value="5" <%= userProfile.premium_limit == 5 ? 'selected' : '' %>>Free (5)</option>
                <option value="30" <%= userProfile.premium_limit == 30 ? 'selected' : '' %>>Plus (30)</option>
                <option value="100" <%= userProfile.premium_limit == 100 ? 'selected' : '' %>>Pro (100)</option>
                <option value="10000" <%= userProfile.premium_limit >= 10000 ? 'selected' : '' %>>Unlim</option>
              </select>
              <input type="number" name="days" class="form-control form-control-sm" value="30" style="width: 80px;">
              <button type="submit" class="btn btn-sm btn-primary">Применить</button>
            </form>
        </div>
    </div>
    <div class="card shadow-sm">
        <div class="card-header">Действия</div>
        <div class="card-body d-flex flex-wrap gap-2">
            <form action="/user/set-status" method="POST">
                <input type="hidden" name="userId" value="<%= userProfile.id %>">
                <% if (userProfile.active) { %>
                    <input type="hidden" name="newStatus" value="false">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Вы уверены, что хотите заблокировать этого пользователя?')">
                        <i class="bi bi-slash-circle"></i> Заблокировать
                    </button>
                <% } else { %>
                    <input type="hidden" name="newStatus" value="true">
                    <button type="submit" class="btn btn-sm btn-success">
                        <i class="bi bi-check-circle"></i> Разблокировать
                    </button>
                <% } %>
            </form>
            <form action="/reset-daily-limit" method="POST" onsubmit="return confirm('Сбросить дневной лимит для этого пользователя?')">
                <input type="hidden" name="userId" value="<%= userProfile.id %>">
                <button type="submit" class="btn btn-sm btn-outline-warning">Сбросить лимит</button>
            </form>
            <form action="/reset-bonus" method="POST" onsubmit="return confirm('Сбросить статус получения бонуса за подписку?')">
                <input type="hidden" name="userId" value="<%= userProfile.id %>">
                <button type="submit" class="btn btn-sm btn-outline-info">Сбросить бонус</button>
            </form>
        </div>
    </div>
  </div>

  <!-- Правая колонка с историей -->
  <div class="col-lg-7">
    <!-- ======================= НОВЫЙ БЛОК: ПРИГЛАШЕННЫЕ ПОЛЬЗОВАТЕЛИ ======================= -->
    <% if (referredUsers && referredUsers.length > 0) { %>
    <div class="card shadow-sm mb-4">
      <div class="card-header">
        Приглашенные пользователи (<%= referredUsers.length %>)
      </div>
      <div class="list-group list-group-flush">
        <% referredUsers.forEach(refUser => { %>
          <a href="/user/<%= refUser.id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <%= refUser.first_name || 'Без имени' %> (<%= refUser.id %>)
            <small class="text-muted"><%= formatDate(refUser.created_at) %></small>
          </a>
        <% }); %>
      </div>
    </div>
    <% } %>
    <!-- ======================================================================================= -->

    <!-- Скачанные треки -->
    <div class="card shadow-sm">
      <!-- ... (блок со скачанными треками без изменений, но я его удалю, чтобы не путать) ... -->
    </div>

    <!-- История действий -->
    <div class="card shadow-sm mt-4">
        <div class="card-header">История действий</div>
        <div class="table-responsive">
            <% if (!actions || actions.length === 0) { %>
              <div class="text-center text-muted py-5">Нет данных о действиях</div>
            <% } else { %>
                <table class="table table-hover mb-0 align-middle small">
                  <thead class="table-light">
                    <tr>
                      <th>Действие</th>
                      <th>Детали</th>
                      <th>Дата</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% actions.forEach(action => { %>
                      <tr>
                        <td>
                          <% 
                            const actionNames = {
                              'registration': 'Регистрация',
                              'bonus_received': 'Бонус получен',
                              'tariff_changed_by_admin': 'Тариф изменен',
                              'banned_by_admin': 'Заблокирован',
                              'unbanned_by_admin': 'Разблокирован'
                            };
                          %>
                          <span class="fw-bold"><%= actionNames[action.action_type] || action.action_type %></span>
                        </td>
                        <td>
                            <% if (action.details && action.details.new_limit) { %>
                                Лимит: <span class="badge bg-info"><%= action.details.new_limit %></span>, Дней: <span class="badge bg-secondary"><%= action.details.days %></span>
                            <% } else { %>
                                —
                            <% } %>
                        </td>
                        <td><%= formatDate(action.created_at) %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
            <% } %>
          </div>
    </div>
  </div>
</div>