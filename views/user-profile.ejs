<%# views/user-profile.ejs (безопасная финальная версия) %>

<%# === Хелперы и функции === %>
<% 
  const escapeHtml = (str) => {
    if (str === undefined || str === null) return '';
    return String(str)
      .replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;')
      .replace(/"/g, '&quot;').replace(/'/g, '&#039;');
  };

  const formatDate = (s) => {
    if (!s) return '—';
    try {
      const d = new Date(s);
      if (isNaN(d.getTime())) return '—';
      return d.toLocaleString('ru-RU', {
        year: 'numeric', month: '2-digit', day: '2-digit',
        hour: '2-digit', minute: '2-digit'
      });
    } catch {
      return '—';
    }
  };
  
  // Безопасное экранирование данных
  const safeName = escapeHtml(userProfile.first_name);
  const safeUsername = escapeHtml(userProfile.username);
  const displayName = safeName || safeUsername || `ID: ${userProfile.id}`;
%>

<%- contentFor('styles') %>
<style>
  .dl-horizontal dt {
    text-align: left;
    white-space: normal;
  }
  .action-buttons form {
    display: inline-block;
  }
</style>

<%- contentFor('body') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <div class="d-flex align-items-center gap-3">
    <div class="user-avatar" style="width: 50px; height: 50px; font-size: 1.5rem;">
      <%= displayName.charAt(0).toUpperCase() %>
    </div>
    <h1 class="h2 mb-0"><%- displayName %></h1>
  </div>
  <div class="btn-toolbar mb-2 mb-md-0">
    <a href="/users" class="btn btn-sm btn-outline-secondary">
      <i class="bi bi-arrow-left me-1"></i> Назад к списку
    </a>
  </div>
</div>

<div class="row g-4">
  <%# === Левая колонка: информация и управление === %>
  <div class="col-lg-5">
    <div class="card shadow-sm mb-4">
      <div class="card-header fw-semibold"><i class="bi bi-person-lines-fill me-2"></i>Информация о пользователе</div>
      <div class="card-body">
        <dl class="row mb-0 dl-horizontal">
          <dt class="col-sm-5">ID</dt><dd class="col-sm-7"><%= userProfile.id %></dd>
          <dt class="col-sm-5">Имя</dt><dd class="col-sm-7"><%- safeName || '—' %></dd>
          <dt class="col-sm-5">Username</dt><dd class="col-sm-7"><%- safeUsername ? `@${safeUsername}` : '—' %></dd>
          
          <dt class="col-sm-5">Статус</dt>
          <dd class="col-sm-7">
            <span class="badge <%= userProfile.active ? 'bg-success' : 'bg-danger' %>">
              <%= userProfile.active ? '✓ Активен' : '✗ Заблокирован' %>
            </span>
          </dd>

          <dt class="col-sm-5">Источник</dt>
          <dd class="col-sm-7">
            <% if (referrer) { %>
              Приглашен <a href="/user/<%= referrer.id %>"><%- escapeHtml(referrer.first_name || referrer.username) || `ID: ${referrer.id}` %></a>
            <% } else { %>
              Пришел сам
            <% } %>
          </dd>
          
          <dt class="col-sm-5">Тариф</dt>
          <dd class="col-sm-7">
            <% 
              const plan = (() => {
                if (userProfile.premium_limit <= 5) return 'Free';
                if (userProfile.premium_limit >= 10000) return 'Unlim';
                if (userProfile.premium_limit == 100) return 'Pro';
                if (userProfile.premium_limit == 30) return 'Plus';
                return 'Other';
              })();
            %>
            <span class="badge bg-primary"><%= plan %> (<%= userProfile.premium_limit %>)</span>
          </dd>
          
          <dt class="col-sm-5">Подписка до</dt><dd class="col-sm-7"><%= formatDate(userProfile.premium_until) %></dd>
          <dt class="col-sm-5">Последняя активность</dt><dd class="col-sm-7"><%= formatDate(userProfile.last_active) %></dd>
          <dt class="col-sm-5">Загрузок (сегодня/всего)</dt>
          <dd class="col-sm-7">
            <%= userProfile.downloads_today || 0 %> / <%= userProfile.total_downloads || 0 %>
          </dd>
        </dl>
      </div>
    </div>

    <div class="card shadow-sm mb-4">
      <div class="card-header fw-semibold"><i class="bi bi-gem me-2"></i>Смена тарифа</div>
      <div class="card-body">
        <form class="row g-2 align-items-center" method="post" action="/set-tariff" data-confirm="Изменить тариф для этого пользователя?">
          <input type="hidden" name="userId" value="<%= userProfile.id %>">
          
          <div class="col-md-5">
            <select name="limit" class="form-select form-select-sm" required>
              <option value="5" <%= userProfile.premium_limit <= 5 ? 'selected' : '' %>>Free (5)</option>
              <option value="30" <%= userProfile.premium_limit == 30 ? 'selected' : '' %>>Plus (30)</option>
              <option value="100" <%= userProfile.premium_limit == 100 ? 'selected' : '' %>>Pro (100)</option>
              <option value="10000" <%= userProfile.premium_limit >= 10000 ? 'selected' : '' %>>Unlim</option>
            </select>
          </div>
          
          <div class="col-md-3">
            <input type="number" name="days" class="form-control form-control-sm" value="30" min="1" max="365" required>
          </div>
          
          <div class="col-md-4">
            <button type="submit" class="btn btn-sm btn-primary w-100">Применить</button>
          </div>

          <div class="col-12 mt-2">
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="applyMode" id="applyModeSet" value="set" checked>
              <label class="form-check-label small" for="applyModeSet">Установить заново</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="applyMode" id="applyModeExtend" value="extend">
              <label class="form-check-label small" for="applyModeExtend">Продлить</label>
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-header fw-semibold"><i class="bi bi-tools me-2"></i>Действия</div>
      <div class="card-body d-flex flex-wrap gap-2 action-buttons">
        <form action="/user/set-status" method="POST">
          <input type="hidden" name="userId" value="<%= userProfile.id %>">
          <% if (userProfile.active) { %>
            <input type="hidden" name="newStatus" value="false">
            <button type="submit" class="btn btn-sm btn-danger" data-confirm="Заблокировать <%- displayName %>?">
              <i class="bi bi-ban me-1"></i>Заблокировать
            </button>
          <% } else { %>
            <input type="hidden" name="newStatus" value="true">
            <button type="submit" class="btn btn-sm btn-success">
              <i class="bi bi-check-circle me-1"></i>Разблокировать
            </button>
          <% } %>
        </form>

        <form action="/reset-daily-limit" method="POST">
          <input type="hidden" name="userId" value="<%= userProfile.id %>">
          <button type="submit" class="btn btn-sm btn-outline-warning" data-confirm="Сбросить дневной лимит для <%- displayName %>?">
            <i class="bi bi-arrow-counterclockwise me-1"></i>Сбросить лимит
          </button>
        </form>

        <form action="/reset-bonus" method="POST">
          <input type="hidden" name="userId" value="<%= userProfile.id %>">
          <button type="submit" class="btn btn-sm btn-outline-info" data-confirm="Сбросить статус бонуса за подписку для <%- displayName %>?">
            <i class="bi bi-gift me-1"></i>Сбросить бонус
          </button>
        </form>
      </div>
    </div>
  </div>

  <%# === Правая колонка: таблицы === %>
  <div class="col-lg-7">
    <%# Приглашенные пользователи %>
    <div class="card shadow-sm mb-4">
      <div class="card-header fw-semibold">
        <i class="bi bi-person-plus-fill me-2"></i>Приглашенные пользователи (<%= referredUsers.length %>)
      </div>
      <% if (referredUsers?.length > 0) { %>
        <div class="list-group list-group-flush">
          <% referredUsers.forEach(refUser => { %>
            <a href="/user/<%= refUser.id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
              <div>
                <span class="fw-semibold"><%- escapeHtml(refUser.first_name) || 'Без имени' %></span>
                <small class="text-muted">(ID: <%= refUser.id %>)</small>
              </div>
              <small class="text-muted"><%= formatDate(refUser.created_at) %></small>
            </a>
          <% }); %>
        </div>
      <% } else { %>
        <div class="card-body text-center text-muted">
          <i class="bi bi-inbox fs-3 opacity-25"></i>
          <p class="mt-2 mb-0">Этот пользователь никого не пригласил</p>
        </div>
      <% } %>
    </div>

    <%# Скачанные треки %>
    <div class="card shadow-sm mb-4">
      <div class="card-header fw-semibold"><i class="bi bi-music-note-list me-2"></i>Последние скачивания</div>
      <div class="table-responsive">
        <% if (!downloads?.length > 0) { %>
          <div class="text-center text-muted py-5">Нет скачиваний</div>
        <% } else { %>
          <table class="table table-hover mb-0 align-middle small">
            <thead class="table-light">
              <tr>
                <th style="width: 70%">Трек</th>
                <th style="width: 30%">Дата</th>
              </tr>
            </thead>
            <tbody>
              <% downloads.forEach((d) => { %>
                <tr>
                  <td>
                    <div class="text-truncate" title="<%- escapeHtml(d.track_title) %>">
                      <%- escapeHtml(d.track_title) %>
                    </div>
                  </td>
                  <td><%= formatDate(d.created_at || d.downloaded_at) %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
      </div>
    </div>

    <%# История действий %>
    <div class="card shadow-sm">
      <div class="card-header fw-semibold"><i class="bi bi-list-check me-2"></i>История действий</div>
      <div class="table-responsive">
        <% if (!actions?.length > 0) { %>
          <div class="text-center text-muted py-5">Нет данных</div>
        <% } else { %>
          <table class="table table-hover mb-0 align-middle small">
            <thead class="table-light">
              <tr>
                <th>Действие</th>
                <th>Детали</th>
                <th>Дата</th>
              </tr>
            </thead>
            <tbody>
              <% actions.forEach(action => { %>
                <tr>
                  <td>
                    <%
                      const actionMap = {
                        'registration': { name: 'Регистрация', class: 'bg-light text-dark' },
                        'bonus_received': { name: 'Бонус получен', class: 'bg-success' },
                        'tariff_changed_by_admin': { name: 'Тариф изменен', class: 'bg-warning text-dark' },
                        'banned_by_admin': { name: 'Заблокирован', class: 'bg-danger' },
                        'unbanned_by_admin': { name: 'Разблокирован', class: 'bg-success' },
                        'referral_bonus_received': { name: 'Реф. бонус', class: 'bg-info text-dark' },
                      };
                      const act = actionMap[action.action_type] || { name: escapeHtml(action.action_type), class: 'bg-secondary' };
                    %>
                    <span class="badge <%= act.class %>"><%- act.name %></span>
                  </td>
                  <td>
                    <% if (action.details?.new_limit) { %>
                      <span class="badge bg-primary"><%= action.details.new_limit %></span> /
                      <span class="badge bg-secondary"><%= action.details.days %>д</span>
                      <small class="text-muted">(<%= action.details.mode === 'extend' ? 'прод.' : 'уст.' %>)</small>
                    <% } else { %>
                      <span class="text-muted">—</span>
                    <% } %>
                  </td>
                  <td><%= formatDate(action.created_at) %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
      </div>
    </div>
  </div>
</div>