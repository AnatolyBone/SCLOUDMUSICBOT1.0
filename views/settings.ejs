    // 2. –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –∑–∞–ø—Ä–æ—Å –∫–∞–∫ –û–ë–´–ß–ù–£–Æ –§–û–†–ú–£ (—á—Ç–æ–±—ã –±—ç–∫–µ–Ω–¥ –ø–æ–Ω—è–ª)
    const formData = new URLSearchParams();
    formData.append('use_hybrid_worker', newValue);

    const response = await fetch('/settings/update', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/x-www-form-urlencoded' // –í–∞–∂–Ω–æ –¥–ª—è —Ç–≤–æ–µ–≥–æ —Å–µ—Ä–≤–µ—Ä–∞
      },
