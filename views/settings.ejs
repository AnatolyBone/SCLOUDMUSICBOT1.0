  const checkbox = this;
  const newValue = checkbox.checked ? 'true' : 'false'; // –°—Ç—Ä–æ–∫–∞ 'true' –∏–ª–∏ 'false'
  const spinner = document.getElementById('hybridWorkerSpinner');
  const label = document.getElementById('hybridWorkerLabel');
  
