    // –í–æ–∑–≤—Ä–∞—â–∞–µ–º –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å –≤ –Ω–æ—Ä–º—É
    spinner.classList.add('d-none');
    checkbox.disabled = false;
    label.style.opacity = '1';
  }
});
</script>

