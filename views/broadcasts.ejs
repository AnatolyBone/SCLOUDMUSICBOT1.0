<% // views/broadcasts.ejs %>

<%- contentFor('body') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Управление рассылками</h1>
  <a href="/broadcast-new" class="btn btn-sm btn-primary">
    <i class="bi bi-plus-circle"></i> Создать новую
  </a>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Статус</th>
        <th>Аудитория</th>
        <th>Текст сообщения</th>
        <th>Запланировано на (UTC)</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      <% if (tasks && tasks.length > 0) { %>
        <% tasks.forEach(task => { %>
          <tr>
            <td><%= task.id %></td>
            <td>
              <% if (task.status === 'pending') { %>
                <span class="badge bg-warning">В ожидании</span>
              <% } else if (task.status === 'completed') { %>
                <span class="badge bg-success">Завершена</span>
              <% } else if (task.status === 'processing') { %>
                <span class="badge bg-primary">В процессе</span>
              <% } else { %>
                <span class="badge bg-danger">Ошибка</span>
              <% } %>
            </td>
            <td><%= task.target_audience %></td>
            <td class="text-truncate" style="max-width: 300px;" title="<%= task.message %>">
              <%= task.message %>
            </td>
            <td><%= new Date(task.scheduled_at).toLocaleString('ru-RU', { timeZone: 'UTC' }) %></td>
            <td>
              <form method="POST" action="/broadcasts/delete" onsubmit="return confirm('Удалить эту задачу? Отменить будет невозможно.')">
                <input type="hidden" name="taskId" value="<%= task.id %>">
                <button type="submit" class="btn btn-sm btn-outline-danger">
                  <i class="bi bi-trash"></i>
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="6" class="text-center text-muted py-4">Запланированных рассылок нет.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>