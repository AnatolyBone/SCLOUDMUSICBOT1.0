<% // views/dashboard.ejs %>

<%- contentFor('styles') %>
<style>
  .card-metric { transition: transform 0.2s; }
  .card-metric:hover { transform: translateY(-5px); }
  .chart-wrap { position: relative; }
</style>

<%- contentFor('body') %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Дашборд</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <a class="btn btn-sm btn-outline-success" href="/export">Экспорт пользователей</a>
  </div>
</div>

<% if (typeof query !== 'undefined' && query.ping) { %>
  <div class="alert <%= query.ping === 'ok' ? 'alert-success' : 'alert-danger' %>">
    <%= query.ping === 'ok' ? 'Канал доступен' : 'Ошибка отправки в канал' %>
  </div>
<% } %>

<!-- Метрики -->
<div class="row g-4 mb-4">
  <div class="col-md-3 col-sm-6">
    <div class="card card-metric shadow-sm">
      <div class="card-body">
        <div class="text-muted">Пользователей</div>
        <div class="h3 mb-0"><%= stats.total_users %></div>
      </div>
    </div>
  </div>
  <div class="col-md-3 col-sm-6">
    <div class="card card-metric shadow-sm">
      <div class="card-body">
        <div class="text-muted">Активных сегодня</div>
        <div class="h3 mb-0"><%= stats.active_today %></div>
      </div>
    </div>
  </div>
  <div class="col-md-3 col-sm-6">
    <div class="card card-metric shadow-sm">
      <div class="card-body">
        <div class="text-muted">Загрузки (всего)</div>
        <div class="h3 mb-0"><%= stats.total_downloads %></div>
      </div>
    </div>
  </div>
    <div class="col-md-3 col-sm-6">
    <div class="card card-metric shadow-sm">
      <div class="card-body">
        <div class="text-muted">Активных / Всего</div>
        <div class="h3 mb-0"><%= stats.active_users %> / <%= stats.total_users %></div>
      </div>
    </div>
  </div>
</div>

<!-- Графики -->
<div class="row g-4">
  <div class="col-12 col-xl-8">
    <div class="card shadow-sm">
      <div class="card-header">Регистрации / Загрузки / Активные</div>
      <div class="card-body chart-wrap" style="height:320px">
        <canvas id="chartCombined"></canvas>
      </div>
    </div>
  </div>
  
  <div class="col-12 col-xl-4">
    <div class="card shadow-sm mb-4">
      <div class="card-header">Активность по часам</div>
      <div class="card-body chart-wrap" style="height:145px">
        <canvas id="chartHours"></canvas>
      </div>
    </div>
    <div class="card shadow-sm">
      <div class="card-header">Активность по дням недели</div>
      <div class="card-body chart-wrap" style="height:145px">
        <canvas id="chartWeek"></canvas>
      </div>
    </div>
  </div>
</div>


<%- contentFor('scripts') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const combinedData = <%- JSON.stringify(chartDataCombined || {}) %>;
    const hourData = <%- JSON.stringify(chartDataHourActivity || {}) %>;
    const weekData = <%- JSON.stringify(chartDataWeekdayActivity || {}) %>;

    const commonOptions = {
        responsive: true,
        maintainAspectRatio: false,
        interaction: { mode: 'index', intersect: false },
        plugins: { legend: { display: true, position: 'top' } },
        scales: { y: { beginAtZero: true } }
    };

    // Главный график
    const combinedCtx = document.getElementById('chartCombined');
    if (combinedCtx && combinedData.labels && combinedData.labels.length) {
        new Chart(combinedCtx, {
            type: 'line',
            data: {
                labels: combinedData.labels,
                datasets: combinedData.datasets.map(ds => ({ ...ds, tension: 0.2, borderWidth: 2, pointRadius: 1 }))
            },
            options: commonOptions
        });
    }

    // График по часам
    const hoursCtx = document.getElementById('chartHours');
    if (hoursCtx && hourData.labels && hourData.labels.length) {
        new Chart(hoursCtx, { type: 'bar', data: hourData, options: commonOptions });
    }

    // График по дням недели
    const weekCtx = document.getElementById('chartWeek');
    if (weekCtx && weekData.labels && weekData.labels.length) {
        new Chart(weekCtx, { type: 'bar', data: weekData, options: commonOptions });
    }
  });
</script>